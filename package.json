{
  "name": "@brunormoreira/ui-components",
  "version": "0.1.0",
  "description": "Personal package for React Components",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "author": "Bruno Moreira <bruno@brunormoreira.com>",
  "license": "MIT",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brunorodmoreira/ui-components.git"
  },
  "bugs": {
    "url": "https://github.com/brunorodmoreira/ui-components/issues"
  },
  "homepage": "https://github.com/brunorodmoreira/ui-components#readme",
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "version": "chan release ${npm_package_version} && git add CHANGELOG.md"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "module": "dist/ui-components.esm.js",
  "size-limit": [
    {
      "path": "dist/ui-components.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/ui-components.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@brunormoreira/prettier-config": "^0.1.1",
    "@geut/chan": "2.x",
    "@size-limit/preset-small-lib": "^5.0.1",
    "@storybook/addon-essentials": "^6.3.3",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.3.3",
    "@storybook/addons": "^6.3.3",
    "@storybook/react": "^6.3.3",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "babel-loader": "^8.2.2",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "size-limit": "^5.0.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  }
}
